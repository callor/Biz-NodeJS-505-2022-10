<html lang="ko">
  <head>
    <%- include ("../includes/head.ejs") %>
    <style>
      section.main {
        width: 95%;
        margin: 0px auto;
      }
      .student.search {
        display: flex;
        justify-content: center;
      }

      .student.insert {
        text-align: right;
        padding: 0.8em;
      }

      .student.insert a {
