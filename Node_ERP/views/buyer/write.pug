extends ../layout 

block content 
    link(rel="stylesheet" href="/css/buyer/write.css")
    form(method="POST").buyer.write 
        fieldset 
            legend 거래처정보 등록
            div
                label 거래처코드
                input(placeholder="거래처코드를 입력하세요",title="거래처코드")
            div
                label 거래처명
                input(placeholder="거래처명을 입력하세요",title="거래처명")
            div
                label 대표전화
                input(placeholder="대표전화를 입력하세요",title="대표전화")
            div
                label 대표자명
                input(placeholder="대표자명을 입력하세요",title="대표자명")
            div
                label 담당자명
                input(placeholder="담당자명을 입력하세요",title="담당자명")
            div
                label 담당자연락처
                input(placeholder="담당자 연락처를 입력하세요",title="담당자연락처")
            div
                label 주소
                input(placeholder="주소를 입력하세요")
            div.button.box
                button(type="button").buyer.input 저장
                button(type="button").buyer.list 리스트로
                button(type="reset").buyer.reset 새로작성
