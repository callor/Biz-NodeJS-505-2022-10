extends ../layout 

block content 
    link(rel="stylesheet" href="/css/buyer/write.css")
    script.
        /*
            buyer.b_code 데이터는 pug 에서는 사용가능지만
            link 로 연결된 script 파일에서는 접근이 불가능하다
            그래서 script 를 연결(src="...")하기 전에
            변수를 하나 선언하여 buyer.b_code 값을 보관해 둔다
            이렇게 선언되고 값이 보관된 변수 bcode 는 link 로 연결된
            script 에서 사용이 가능하다
        */
        const public_bcode = `#{buyer.b_code}`
    script(src="/js/buyer/write.js")
    form(method="POST").buyer.write 
        fieldset 
            legend 거래처정보 등록
            div
                label 거래처코드
                input(name="b_code",value=buyer.b_code,placeholder="거래처코드를 입력하세요",title="거래처코드")
                div.buyer.code
                    button(type="button").buyer.code_create 코드생성
                    button(type="button").buyer.code_check 중복검사
            div
                label 거래처명
                input(name="b_title", value=buyer.b_title, placeholder="거래처명을 입력하세요",title="거래처명")
            div
                label 대표전화
                input(name="b_tel",value=buyer.b_tel, placeholder="대표전화를 입력하세요",title="대표전화")
            div
                label 대표자명
                input(name="b_ceo",value=buyer.b_ceo,placeholder="대표자명을 입력하세요",title="대표자명")
            div
                label 담당자명
                input(name="b_manager",value=buyer.b_manager,placeholder="담당자명을 입력하세요",title="담당자명")
            div
                label 담당자연락처
                input(name="b_man_tel",,value=buyer.b_man_tel placeholder="담당자 연락처를 입력하세요",title="담당자연락처")
            div
                label 주소
                input(name="b_post_addr",value=buyer.b_post_addr, placeholder="주소를 입력하세요")
            div.button.box
                button(type="button").buyer.input 저장
                button(type="button").buyer.list 리스트로
                button(type="reset").buyer.reset 새로작성

